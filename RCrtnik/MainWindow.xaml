<Window x:Class="RCrtnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RCrtnik"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="RC Launcher" Height="700" Width="1200">
    <Grid>
        <Image Stretch="UniformToFill" Source="GGS/RC.png"/>
        <TextBlock Name="VersionText"  VerticalAlignment="Top" FontSize="20" Foreground="White" Margin="792,526,0,0" RenderTransformOrigin="0.5,0.5" Text="12345678" HorizontalAlignment="Left">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock Name="Random10" FontSize="20" Foreground="#FF31FF00" Margin="622,518,0,0" RenderTransformOrigin="0.505,0.53" Text="12345678" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="86">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock Name="RandomTextBox"  VerticalAlignment="Top" FontSize="20" Foreground="White" Margin="514,481,0,0" RenderTransformOrigin="0.5,0.5" Text="??????????" HorizontalAlignment="Left">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button Name="PlayButton" Content="Checking For Updates" Click="PlayButton_Click" FontSize="30" FontWeight="Bold" Foreground="#DDFFFFFF" Margin="0,0,20,20" Background="#FF069207" Padding="10,1,10,1" Panel.ZIndex="1" BorderThickness="2,1,2,2" HorizontalAlignment="Right" Width="332" Height="45" VerticalAlignment="Bottom" MinWidth="1"/>
        <Button Name="Button_02" Content="Help" Click="Button_02_Click" FontSize="30" FontWeight="Bold" Foreground="#DDFFFFFF" Margin="0,0,20,70" Background="#FF922306" Padding="10,1,10,1" Panel.ZIndex="1" BorderThickness="2,1,2,2" HorizontalAlignment="Right" Width="332" Height="45" VerticalAlignment="Bottom" MinWidth="1"/>
        <Button Name="Button_03" Content="" Click="Button_03_Click" FontSize="30" FontWeight="Bold" Foreground="#DDFFFFFF" Margin="0,0,377,70" Background="#FF922306" Padding="10,1,10,1" Panel.ZIndex="1" BorderThickness="2,1,2,2" HorizontalAlignment="Right" Width="332" Height="45" VerticalAlignment="Bottom" MinWidth="1"/>
        <Button x:Name="OpenWindowButton" 
        Content="Открыть новое окно" 
        Click="OpenWindowButton_Click" 
        Width="150" 
        Height="30" Margin="314,569,736,85"/>
    </Grid>
</Window>
