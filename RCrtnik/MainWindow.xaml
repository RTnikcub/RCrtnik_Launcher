<Window x:Class="RCrtnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RCrtnik"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="RC Launcher" Height="700" Width="1200">
    <Grid>
        <Image Stretch="UniformToFill" Source="GGS/RC.png"/>
        <TextBlock Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Foreground="White" Margin="0,0,5,70"/>
        <Button Name="PlayButton" Content="Checking For Updates" Click="PlayButton_Click" FontSize="30" FontWeight="Bold" Foreground="#DDFFFFFF" Margin="0,0,20,10" Background="#FF069207" Padding="10,1,10,5" Panel.ZIndex="1" BorderThickness="2,1,2,2" HorizontalAlignment="Right" Width="332" Height="55" VerticalAlignment="Bottom" MinWidth="1"/>
        <Button Name="Button_02" Content="Help" Click="Button_02_Click" FontSize="30" FontWeight="Bold" Foreground="#DDFFFFFF" Margin="0,0,20,70" Background="#FF922306" Padding="10,1,10,5" Panel.ZIndex="1" BorderThickness="2,1,2,2" HorizontalAlignment="Right" Width="332" Height="45" VerticalAlignment="Bottom" MinWidth="1"/>
        <Button Name="Button_03" Content="Проверить обновление" Click="Button_03_Click" FontSize="20" FontWeight="Bold" Foreground="#DDFFFFFF" Margin="0,0,20,120" Background="#FF922306" Padding="10,1,10,5" Panel.ZIndex="1" BorderThickness="2,1,2,2" HorizontalAlignment="Right" Width="332" Height="45" VerticalAlignment="Bottom" MinWidth="1"/>
    </Grid>
</Window>
